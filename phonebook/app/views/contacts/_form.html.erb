<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :first_name , class: "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <%= form.text_field :first_name, id: :contact_first_name , class: "form-control input-width"%>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :last_name , class: "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <%= form.text_field :last_name, id: :contact_last_name , class: "form-control input-width"%>
    </div>  
  </div>

  <div class="form-group row">
    <%= form.label :email , class: "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <%= form.text_field :email, id: :contact_email , class: "form-control input-width"%>
    </div>  
  </div>

  <div class="form-group row">
    <%= form.label :notes , class: "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <%= form.text_area :notes, id: :contact_notes , class: "form-control input-width"%>
    </div>
  </div>

  <div class="actions ">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>

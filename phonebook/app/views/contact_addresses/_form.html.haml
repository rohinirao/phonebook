= form_for [@contact,@contact_address] do |f|
  - if @contact_address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@contact_address.errors.count, "error")} prohibited this contact_address from being saved:"
      %ul
        - @contact_address.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :label
    = f.text_field :label
    / = f.select("label",address_labels_select,:prompt => "select")
    / = text_field_tag "[contact_address][custom_label]"

  .field
    = f.label :address
    = f.text_area :address
    = f.hidden_field :contact_id, :value => @contact.id
  .actions
    = f.submit 'Save'